<head>
  <meta charset="utf-8">
  <title>Clientes</title>

</head>
<main>
   <table width="1000" border="0" align="center">
    <thead>
    <tr>
      <td align="center"> <%= link_to image_tag('cliente.png', title: 'Nuevo Cliente', :width => "50px", :height => "50px" ),   new_client_path  %><br>
        <%= link_to 'Nuevo Cliente', new_client_path %>
    </tr>
    </thead>
  </table>
  <br>
  <table width="800" border="0">
    <thead>
    <tr>
      <th align="left">Nombre</th>
      <th align="left">Apellido</th>
      <th align="left">Sociedad</th>


      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @clients.each do |client| %>
        <td><%= client.nombre %></td>
        <td><%=client.apellido%></td>
        <td><%= client.membership %></td>
        <td><%= link_to image_tag('ver.png', title: 'Ver'), client %></td>
        <td><%= link_to image_tag('edit.png', title: 'Editar'), edit_client_path(client) %></td>
        <td><%= link_to image_tag('eliminar.png', title: 'Eliminar'), client, method: :delete, data: { confirm: 'Esta seguro de eliminar?' } %></td>
        <tr></tr>
    <% end %>
    </tbody>
  </table>
</main>
